{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./lib/",
    "paths": {
      "@/components/*": ["components/*"],
      "@/ui/*": ["components/ui/*"],
      "@/screens/*": ["components/screens/*"],

      "@/assets/*": ["assets/*"],
      "@/config/*": ["config/*"],
      "@/hooks/*": ["hooks/*"],
      "@/services/*": ["services/*"],
      "@/shared/*": ["shared/*"],
      "@/store/*": ["store/*"],
      "@/utils/*": ["utils/*"],
      "@/api/*": ["api/*"],
      "@/providers/*": ["providers/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "pretttier.config.js"
  ],
  "exclude": ["node_modules"]
}
